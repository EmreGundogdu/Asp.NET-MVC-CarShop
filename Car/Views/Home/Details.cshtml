@model Car.Models.Advertise
@{
    ViewBag.Title = "Details";
}
<div class="container">
    <div class="row mt-3">
        <div class="row">
            <div class="col-md-8">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        @{ int i = 0;}
                        @foreach (var item in ViewBag.imgs)
                                {
                                    i++;
                                    var active = i == 1 ? "active" : "";
                                <div class="carousel-item @active">
                                    <img src="/Content/img/@item.ImageName" class="d-block w-100" alt="..." height="500">
                                </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-md-4">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr><th colspan="2">Advertise Properties</th></tr>
                        <tr><th><strong>No :</strong></th><td>@Model.AdvertiseNo</td></tr>
                        <tr><th><strong>Brand :</strong></th><td>@Model.Model.Brand.BrandName</td></tr>
                        <tr><th><strong>Model :</strong></th><td>@Model.Model.ModelName</td></tr>
                        <tr><th><strong>City :</strong></th><td>@Model.City.CityName</td></tr>
                        <tr><th><strong>Date :</strong></th><td>@Model.Date</td></tr>
                        <tr><th><strong>Status :</strong></th><td>@Model.Status.StatusName</td></tr>
                        <tr><th><strong>Year :</strong></th><td>@Model.ModelYear</td></tr>
                        <tr><th><strong>Kilometer :</strong></th><td>@Model.Kilometer</td></tr>
                        <tr><th><strong>Fuel : </strong></th><td>@Model.Fuel</td></tr>
                        <tr><th><strong>Gearing Type :</strong></th><td>@Model.GearingType</td></tr>
                        <tr><th><strong>Description</strong></th><td>@Model.Description</td></tr>
                        <tr><th><strong>Price</strong></th><td>@Model.Price€</td></tr>
                        <tr><th><strong>Phone</strong></th><td><label class="btn btn-outline-info"><i class="bi bi-telephone-forward"></i>@Model.Phone</label></td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>