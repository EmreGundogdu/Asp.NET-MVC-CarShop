@model Car.Models.ChangePassword
@{
    ViewBag.Title = "ChangePassword";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            @Html.Action("PartialFilter", "Home")
        </div>
        <div class="col-md-9">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                </ol>
            </nav>
            <div class="image-thumbnail mt-3">
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "row" }))
                {                    
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Old Password</label>
                        <div class="col-sm-4">
                            @Html.PasswordFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">New Password</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">RePassword</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.ConNewPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.ConNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-outline-info col-6"><i class="bi bi-pencil"></i>Change Password</button>
                        </div>
                    </div>
                }

            </div>
        </div>

    </div>
</div>

