@model Car.Models.Login

@{
    ViewBag.Title = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <form class="row mt-3">
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Brand</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="Brand" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Model</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="Model" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Min</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="Min Price" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Max</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="Max Price" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">City</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="City" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Status</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="Status" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <button type="submit" class="btn btn-outline-info col-12"><i class="bi bi-search"></i>Filter</button>
                    </div>
                </div>

            </form>
        </div>
        <div class="col-md-9">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Sign In</li>
                </ol>
            </nav>
            <div class="image-thumbnail mt-3">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "row" }))
                {                    
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Username</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-4">
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-outline-success col-6"><i class="bi bi-box-arrow-in-right"></i>Sign In</button>
                        </div>
                    </div>

                }

            </div>
        </div>

    </div>
</div>
