@model IEnumerable<Car.Models.Advertise>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <form class="row mt-3">
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Brand</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="Brand" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Model</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="Model" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Min</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="Min Price" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Max</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="Max Price" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">City</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="City" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Status</label>
                    <div class="col-sm-8">
                        <input type="text" placeholder="Status" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <button type="submit" class="btn btn-outline-info col-12"><i class="bi bi-search"></i>Filter</button>
                    </div>
                </div>

            </form>
        </div>
        <div class="col-md-9">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Advertise List</li>
                </ol>
            </nav>
            <div class="image-thumbnail mt-3">
                
                <table class="table">
                    <tr>
                        <th>
                           Brand
                        </th>
                        <th>
                            Model
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            City
                        </th>  
                        <th>
                            Price
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model.Brand.BrandName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model.ModelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City.CityName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.StatusName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                    <td>
                        <a class="btn btn-outline-info" href="@Url.Action("Image",new { id = item.AdvertiseId })"><i class="bi bi-camera"></i>Add Image</a>
                        <a class="btn btn-outline-primary" href="@Url.Action("Edit",new { id = item.AdvertiseId })"><i class="bi bi-pencil"></i>Edit</a>
                        <a class="btn btn-outline-danger" href="@Url.Action("Delete",new { id = item.AdvertiseId })"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
                    }

                </table>               
            </div>
        </div>
    </div>
</div>

